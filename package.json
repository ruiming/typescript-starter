{
  "name": "typescript-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "ruiming <ruiming.zhuang@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./build/src/index.js",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test nyc mocha --compilers ts:espower-typescript/guess 'test/**/*.ts' --timeout=10000",
    "watchtest": "cross-env NODE_ENV=test mocha --watch --compilers ts:espower-typescript/guess 'test/**/*.ts' --timeout=10000",
    "report-coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "tslint --type-check --fix --project tsconfig.json '{src,test}/**/*.ts'",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "7.0.28",
    "@types/power-assert": "^1.4.29",
    "@types/supertest": "^2.0.0",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "espower-typescript": "^8.0.2",
    "husky": "^0.13.4",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "power-assert": "^1.4.4",
    "source-map-support": "^0.4.15",
    "supertest": "^3.0.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.0",
    "validate-commit-msg": "^2.12.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --type-check --fix --project tsconfig.json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "directories": {
    "test": "test/"
  },
  "nyc": {
    "cache": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "test"
    ]
  }
}
