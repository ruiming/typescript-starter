{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-microsoft-contrib"
    ],
    "jsRules": {},
    "rules": {
        // 不允许分号
        "semicolon": [
            true,
            "never"
        ],
        // 允许 console
        "no-console":[
            false
        ],
        // 参数对齐
        "align": [
            true, 
            "parameters", 
            "statements"
        ],
        // 强制要求声明 type
        "typedef": [
            true,
            "arrow-parameter",
            "call-signature",
            "member-variable-declaration",
            "parameter",
            "property-declaration"
        ],
        // 不强制 jsdoc
        "missing-jsdoc": [
            false
        ],
        // 关闭以下规则
        "no-import-side-effect": [
            false
        ],
        "no-backbone-get-set-outside-model": [
            false
        ],
        "no-invalid-this": [
            false
        ],
        "max-classes-per-file": [
            false
        ],
        "function-name": [
            false
        ],
        "member-access": [
            false
        ]
    },
    "rulesDirectory": []
}
