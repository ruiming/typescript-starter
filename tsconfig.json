{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "app": ["./src"],
            "app/*": ["./src/*"]
        },
        "rootDir": "src",
        "outDir": "build",
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2015", "es2016", "es2017", "dom"]
    }
}
